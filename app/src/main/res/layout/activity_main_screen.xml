<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.motorgimbalconsole.MainActivityScreen" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="405dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/butGimbalConfig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gimbal_config" />

            <Button
                android:id="@+id/butGimbalFlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gimbal_fight" />
            <Button
                android:id="@+id/butGimbalReset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gimbal_reset" />

            <Button
                android:id="@+id/butGimbalStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gimbal_status" />
            <Button
                android:id="@+id/butFlash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flash firmwares" />
            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/connect_disconnect" />

        </LinearLayout>




    </LinearLayout>

</RelativeLayout>